{% extends 'base_game.html.twig' %}

{% block title %}Hello GameController!{% endblock %}

{% block body %}
<hr>
    <div class="game-wrapper">
        <div class="game">
            <div class="item">
                <img src="{{ asset('images/simple.png') }}" class="item{{ item1 }}" id="item_1"  alt="">
            </div>
            <div class="d-in-bloc"><i class="fas fa-plus fa-2x"></i></div>
            <div class="item" >
                <img src="{{ asset('images/simple.png') }}" class="item{{ item2 }}" id="item_2"  alt="">
            </div>
            <div class="d-in-bloc"><i class="fas fa-equals fa-2x"></i></div>
            <div class="build" id="answer" data-answer="{{ build }}" data-alt="{{ buildAlt }}">
                <img src="{{ asset('images/build.png') }}" class="build{{ build }}" id="answer_image" alt="">
            </div>
        </div>
    </div>

    <hr>
    <div id="items_wrapper">
        {% for item in items %}
        <div class="build choices"  data-build="{{ item }}">
            <div class=""><img src="{{ asset('images/build.png') }}" class="build{{ item }}" alt=""></div>
        </div>
        {% endfor %}
    </div>
        
{% endblock %}
