{% extends 'base.html.twig' %}

{% block title %}Hello GameController!{% endblock %}

{% block body %}
    <div class="game-wrapper">
        <div class="item"><img src="{{ asset('images/simple.png') }}" id="item{{ item1 }}" alt=""></div>
        <div class="d-in-bloc"><i class="fas fa-plus fa-2x"></i></div>
        <div class="item" ><img src="{{ asset('images/simple.png') }}" id="item{{ item2 }}" alt=""></div>
        <div class="d-in-bloc"><i class="fas fa-equals fa-2x"></i></div>
        <div class="build"><img src="{{ asset('images/build.png') }}" class="build{{ build }}" alt=""></div>
    </div>

    <hr>
    <div class="items-wrapper">

        {% for item in items %}
        <div class="build">
            <div class=""><img src="{{ asset('images/build.png') }}" class="build{{ item }}" alt=""></div>
        </div>
        {% endfor %}
    </div>
        
{% endblock %}
